{
  "globals": {
    "$": false,
    "define": true,
    "require": true,
    "React": true,
    "ReactDOM": true
  },

  "extends": ["airbnb"],

  "plugins": [
  ],

  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "classes": true,
      "modules": true,
      "jsx": true
    }
  },
  "rules": {
    "comma-dangle": 0,
    "indent": [1, 4],
    "react/jsx-indent": [1, 4],
    "react/prefer-stateless-function": 0,
    "react/jsx-indent-props": [1, 4],
    "import/no-extraneous-dependencies": 0,
    "global-require": 0,
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }]
  }
}
